public class Circle {
    
    private double radius;

    public Circle(double radius) {
        this.radius = radius;
    }

    public Circle() {
        this.radius = 0.0;
    }

    public double getRadius() {
        return radius;
    }

    public void setRadius(double newRadius) {

        if (newRadius >= 0) {
            this.radius = newRadius;
        } else {
            System.err.println("Error: Radius cannot be negative. Value not changed.");
        }
    }
}
